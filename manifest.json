{
  "manifest_version": 3,
  "name": "Open in ChatGPT",
  "version": "1.0",
  "description": "Select any text on a webpage, right-click, and send it directly to ChatGPT for quick answers. Simple, fast, and efficient.",
  "author": "Flotss",
  "homepage_url": "https://github.com/Flotss/OpenInChatGPTExtension",
  "permissions": ["contextMenus", "tabs", "scripting"],
  "host_permissions": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    },
    "default_title": "Open in ChatGPT"
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
